<section>

    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="section-title text-center">
                    <h2 data-aos="fade-up" style="font-size: 5rem;">Featured Jobs</h2>
                </div>
            </div>

            {{#each jobsApi }}

            <div data-aos="fade-up" data-aos-duration="1000" class="col-md-4 col-sm-4">
                <div class="courses-thumb courses-thumb-secondary">
                    <div class="courses-top">
                        <div class="courses-image">
                            <img src="./images/jobs/{{ this.image }}" class="img-responsive" alt="">
                        </div>
                        <div class="courses-date">
                            <span title="Location"><i class="fa fa-map-marker"></i> {{ this.location }} </span>
                            <span title="Type"><i class="fa fa-file"></i> Contract</span>
                        </div>
                    </div>

                    <div class="courses-detail">
                        <h3 style="font-size: 3rem;"> {{ this.name }} </h3>

                        <p class="lead"><strong> {{ this.salary }} </strong></p>

                        <p> {{ this.location }} </p>
                        <br>
                        <div class="stage">
                        </div> <i class="icon bi bi-clipboard2-heart-fill"></i> <strong> {{ this.note }} </strong>
                    </div>

                    <div class="courses-info">

                        <form action="/jobs/details" method="post">

                            <input type="hidden" name="id" value="{{this.id}}">
                            <button type="submit" class="section-btn btn btn-primary btn-block">View Details</button>

                        </form>


                    </div>
                </div>
            </div>

            {{/each }}


        </div>
    </div>
</section>