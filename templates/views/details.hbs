<!DOCTYPE html>
<html lang="en">

<head>

     {{>head}}

</head>

<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     {{>loader}}


     <!-- MENU -->
     {{>header}}

     {{!-- hero section --}}
     <section>
          <div class="container">
               <div class="row">
                    <div class="col-lg-3 col-md-3 col-xs-12">
                         <div>
                              <br>

                              <img src="./images/jobs/{{image}}" alt="" class="img-responsive wc-image">

                              <br>
                         </div>
                    </div>

                    <div class="col-lg-9 col-md-9 col-xs-12">
                         <form action="#" method="post" class="form">
                              <h2>{{ name }}</h2>

                              <p class="lead"><strong class="text-primary">{{ salary }}</strong> <small> per
                                        year</small></p>

                              <p class="lead">
                                   <i class="fa fa-briefcase"></i> {{ note }} &nbsp;&nbsp;
                                   <i class="fa fa-map-marker"></i> {{ location }} &nbsp;&nbsp;
                                   <i class="fa fa-file"></i> Contract
                              </p>


                         </form>
                    </div>
               </div>

               <div class="panel panel-default">
                    <div class="panel-heading">
                         <h4>Job Description</h4>
                    </div>

                    <div class="panel-body">
                         <p> {{ description }} </p>

                         <h4>Responsibillitites:</h4>

                         <p> {{ responsibillitites }} </p>


                         <br>
                         <br>
                         <b>{{ note }}</b>
                    </div>
               </div>



               <div class="clearfix">
                    <a href="/contact" class="section-btn btn btn-primary pull-left">Apply for this job</a>

                    {{>socialR}}

               </div>
          </div>
     </section>


     <!-- FOOTER -->
     {{>footer}}

     <!-- SCRIPTS -->
     <script src="js/jquery.js"></script>
     <script src="js/bootstrap.min.js"></script>
     <script src="js/owl.carousel.min.js"></script>
     <script src="js/smoothscroll.js"></script>
     <script src="js/custom.js"></script>

</body>

</html>