<!DOCTYPE html>
<html lang="en">

<head>

     {{>head}}

</head>

<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     {{>loader}}


     <!-- MENU -->
     {{>header}}

     {{!-- hero section --}}
     <section>
          <div class="container">
               <div class="row">
                    <div class="col-lg-3 col-md-3 col-xs-12">
                         <div>
                              <br>

                              <img src="./images/jobs/{{image}}" alt="" class="img-responsive wc-image">

                              <br>
                         </div>
                    </div>

                    <div class="col-lg-9 col-md-9 col-xs-12">
                         <form action="#" method="post" class="form">
                              <h2 data-aos="fade-up">{{ name }}</h2>

                              <p data-aos="fade-upS" class="lead"><strong class="text-primary">{{ salary }}</strong>
                                   <small> per
                                        month</small></p>

                              <p class="lead">
                                   <i class="fa fa-briefcase"></i> {{ note }} &nbsp;&nbsp;
                                   <i class="fa fa-map-marker"></i> {{ location }} &nbsp;&nbsp;
                                   <i class="fa fa-file"></i> Contract
                              </p>


                         </form>
                    </div>
               </div>

               <div class="panel panel-default">
                    <div class="panel-heading">
                         <h4>Job Description</h4>
                    </div>

                    <div class="panel-body">
                         <p> {{ description }} </p>

                         <h4>Responsibillitites:</h4>

                         <p> {{ responsibillitites }} </p>


                         <br>
                         <br>
                         <b>{{ note }}</b>
                    </div>
               </div>



               <div class="clearfix">
                    <form action="/jobid" method="post">
                         <input name="id" type="hidden" value="{{ id }}">
                         <button class="section-btn btn btn-primary pull-left" type="submit">Apply for this job</button>
                    </form>
                    {{!-- <a href="/contact" class="section-btn btn btn-primary pull-left">Apply for this job</a> --}}

                    {{>socialR}}

               </div>
          </div>
     </section>


     <!-- FOOTER -->
     {{>footer}}

     {{!-- javascript --}}
     {{>js}}


</body>

</html>